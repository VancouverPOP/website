{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.website.host": "https://vanpop.ca/",
  "frontMatter.framework.startCommand": "pnpm run dev",
  "frontMatter.git.enabled": true,
  "frontMatter.git.requiresCommitMessage": [
    "main"
  ],
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.supportedFileTypes": [
    "md",
    "markdown",
    "mdx",
    "mdoc"
  ],
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "previewPath": "blog",
      "pageBundle": false,
      "clearEmpty": true,
      "filePrefix": "{{year}}{{month}}{{day}}",
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "description",
          "type": "string",
          "single": true,
          "required": false
        },
        {
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "required": true
        },
        {
          "name": "updatedDate",
          "type": "datetime",
          "default": "{{now}}"
        },
        {
          "name": "heroImage",
          "type": "image",
          "isPreviewImage": true,
          "required": true,
          "default": "/blog-assets/blog-placeholder.jpg"
        },
        {
          "name": "author",
          "type": "string",
          "single": true,
          "required": true,
          "default": "Strong Towns Vancouver"
        }
      ]
    }
  ],
  "frontMatter.content.snippets": {
    "Image": {
      "description": "",
      "body": [
        "<center><img class=\"blog-image\" src=\"[[&mediaUrl]]\" alt=\"[[alt]]\"></center>",
        "<center>Image description goes here...</center>"
      ],
      "isMediaSnippet": true
    },
    "Image with Description": {
      "description": "",
      "body": "<center><img class=\"blog-image\" src=\"[[&mediaUrl]]\" alt=\"[[alt]]\"></center>",
      "isMediaSnippet": true
    },
    "Double Break": {
      "description": "Template for a new image with description",
      "body": [
        "<br>",
        "<br>"
      ],
      "fields": []
    },
    "Break": {
      "description": "Template for a new image with description",
      "body": "<br>",
      "fields": []
    }
  },
  "frontMatter.dashboard.openOnStart": true
}