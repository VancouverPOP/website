---
import SvgLink from './SvgLink.astro';
import '../styles/global.css';

interface LearnMoreLink {
    name: string;
    link: string;
}

const links: LearnMoreLink[] = [
    {
        name: 'Strong Towns',
        link: 'https://strongtowns.org/',
    },
    {
        name: 'Strong Towns Nanaimo',
        link: 'https://www.beautifulnanaimo.ca/',
    },
    {
        name: 'Strong Towns Langley',
        link: 'https://strongtownslangley.org/',
    },
    {
        name: 'Del-POP',
        link: 'https://delpop.ca/',
    },
];

const today = new Date();
---

