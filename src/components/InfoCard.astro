---
interface Props {
    icon: string;
    title: string;
    text: string;
}

const { icon, title, text } = Astro.props;
---

<div
    class=`py-4 px-5 bg-[#0f0a1ee0]/90 backdrop-blur-xs rounded-md font-raleway min-h-55 border border-white/10`
>
    <div
        class="w-12 h-12 bg-vp-light-pink/15 rounded-lg flex items-center justify-center mb-3"
    >
        <span class="text-2xl">{icon}</span>
    </div>
    <h3 class="text-2xl font-bold">{title}</h3>
    <p class="pt-5 font-light text-sm">{text}</p>
</div>
