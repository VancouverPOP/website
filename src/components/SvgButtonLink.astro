---
interface Props {
    text: string;
    href: string;
    target?: '_blank' | '_parent' | '_top' | '_self';
    hoverColor: 'vp-purple';
}

const { text, href, hoverColor, target = '_self' }: Props = Astro.props;

let borderColor = null;
let textColor = null;
let hoverBorderColor = null;
let hoverTextColor = null;
let hoverBackgroundColor = null;
if (hoverColor === 'vp-purple') {
    borderColor = 'border-vp-purple';
    textColor = 'text-vp-purple';
    hoverBorderColor = 'hover:border-vp-purple';
    hoverTextColor = 'hover:text-white';
    hoverBackgroundColor = 'hover:bg-vp-purple';
}
---

<a
    class:list={[
        'flex',
        'font-raleway',
        'items-center',
        'gap-2',
        'p-3',
        'h-12',
        'border',
        'group',
        'border-solid',
        'rounded-xl',
        'cursor-pointer',
        textColor,
        borderColor,
        hoverBorderColor,
        hoverTextColor,
        hoverBackgroundColor,
        'hover:shadow-sm',
        'hover:shadow-black/50',
        'hover:border-transparent',
        'transition-all',
        'hover:opacity-95',
        'hover:-translate-y-0.5',
        'ease-in-out',
        'duration-300',
    ]}
    href={href}
    target={target}
>
    {!!Astro.slots.default && Astro.slots.has('default') ? <slot /> : null}
    <span>{text}</span>
</a>
